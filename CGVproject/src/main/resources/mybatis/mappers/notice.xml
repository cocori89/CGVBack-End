<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">
	<!-- 공지사항중  -->
	<select id="noticeSelectIndex" resultType="kr.co.cgv.domain.NoticeVO">
		select *
		from notice
		where notice_use = "3"
	</select>
	
	<!-- 공지사항 개수  -->
	<select id="noticeCount" resultType="java.lang.Integer">
		select count(*) 
		from notice
	</select>
	<!-- 공지사항을 부분적으로 불러오기 -->
	<select id="noticeSelectPaging" parameterType="java.lang.Integer" resultType="kr.co.cgv.domain.NoticeVO">
		select * 
		from notice
		order by notice_code desc
		limit #{startnum}, 10
	</select>
	
	<!-- 공지사항 상세정보 -->
	<select id="noticeSelectContent" parameterType="java.lang.Integer" resultType="kr.co.cgv.domain.NoticeVO">
		select *
		from notice
		where notice_code=#{notice_code}
	</select>
	
	<!-- 조회수 증가 -->
	<update id="noticeUpdateHit" parameterType="java.lang.Integer">
		update notice
		set notice_hit = notice_hit+1
		where notice_code=#{notice_code}
	</update>
	
</mapper>