<?xml version="1.0" encoding="UTF-8"?>
<!-- 타일즈 설정 파일  -->
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- base-definition -->
	<!-- 이부분은  페이지 레이아웃을 지정하는 곳입니다. 각각의 공통 조각들을 지정합니다 -->
	<definition name="base-definition"
		template="/WEB-INF/views/tiles/layout.jsp">
		<put-attribute name="header"
			value="/WEB-INF/views/tiles/layout/header.jsp" />
		<put-attribute name="section" value="" />
		<put-attribute name="footer"
			value="/WEB-INF/views/tiles/layout/footer.jsp" />
	</definition>
	<!-- 이하의 페이지들은 등록할때마다 타일즈를 사용 하는 것이다.-->
	<!-- Home Page -->
	<definition name="*" extends="base-definition">
		<put-attribute name="section" value="/WEB-INF/views/{1}.jsp" />
	</definition>
		<definition name="*/*" extends="base-definition">
		<put-attribute name="section" value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	

</tiles-definitions>

